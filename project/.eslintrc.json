{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "no-console": 1,
    "no-debugger": 1,
    "no-unused-vars": 1,
    "no-alert": 2,
    "no-eval": 2,
    "no-var": 2,
    "no-multi-spaces": 1
  }
}
